<!-- meaning_item.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="30dp"
    android:paddingEnd="53dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDefinition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textColor="#052D39" />

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="• primary/elementary education \n• post-secondary education \n• a college/university education \n• She completed her formal education in 2019. \n• Students from lower income families are less \n• likely to continue their education. \n• to further/pursue your education \n• to get/receive an education \n• The school provides an excellent all-round"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_condensed_light"
        android:textColor="#052D39" />

</LinearLayout>
